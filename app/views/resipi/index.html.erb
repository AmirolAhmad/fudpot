<h1>Listing recipe</h1>
<%= link_to 'New recipe', new_resipi_path %>


<div class="row">
<% @resipi.each do |resipi| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= resipi.title %>
          <div class="btn-group btn-group-xs pull-right">
            <%= link_to raw("<span class=\"glyphicon glyphicon-eye-open\"></span>"), resipi_path(resipi), class: 'btn btn-primary' %>
            <%= link_to raw("<span class=\"glyphicon glyphicon-pencil\"></span>"), edit_resipi_path(resipi), class: 'btn btn-info' %>
            <%= link_to raw("<span class=\"glyphicon glyphicon-remove\"></span>"), resipi_path(resipi), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </h3>
      </div>
      <div class="panel-body">
        <%= image_tag "../uploads/" + resipi.filename, :height => '400px', :class => 'img-thumbnail' %>
      </div>
      <div class="panel-footer">
        <%= resipi.text %>
      </div>
    </div>
  </div>

<% end %>
</div>

