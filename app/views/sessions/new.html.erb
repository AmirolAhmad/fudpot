<% provide(:title, "Sign in") %>

<div class="row">
  <div class="col-md-5 col-md-offset-3 form-bg">

    <div class="page-header">
      <h1>Sign in <small>Show off your recipe list</small></h1>
    </div>

    <%= form_for(:session, url: sessions_path) do |f| %>
    
    <form class="form-horizontal" role="form">

      <div class="form-group">
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email address' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
      </div>

      <div class="form-group">
        <div class="checkbox">
          <label>
            <%= check_box_tag :remember_me, 1, params[:remember_me] %>
            <%= label_tag :remember_me %>
          </label>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      </div>

      <p><%= link_to "forgotten password?", new_password_reset_path %></p>

      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </form>
    <% end %>

  </div>
</div>