<% provide(:title, "Sign in") %>
<div id="full-screen-background-image">
  <div id="wrapper">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
            <div class="page-header">
              <h1>Oh yeah, it's that good.</h1>
            </div>
            <p class="lead">Manage your recipe, follower & following other people</p>
        </div>
        <div class="col-md-4">
          <div class="login-form">
            <p class="lead">Why wait? It's free!</p>
            <%= form_for(:session, url: sessions_path) do |f| %>
            
            <form class="form-horizontal" role="form">

              <div class="form-group">
                <%= f.text_field :email, class: 'form-control', placeholder: 'Email address' %>
              </div>

              <div class="form-group">
                <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
              </div>

              <div class="form-group">
                <%= f.submit "Sign in", class: "btn btn-large btn-primary btn-block" %>
              </div>

              <p>New user? <%= link_to "Sign up now!", signup_path %></p>
            </form>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>