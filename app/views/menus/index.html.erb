<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div class="page-header">
      <h1>Submit a recipe</h1>
    </div>

    <%= form_for(@menu) do |f| %>
    <form class="form-horizontal" role="form">
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.file_field :image %>
        <p class="help-block">For better picture resolution, the size should be 280x280.</p>
      </div>
      
      <div class="form-group">
        <label>Recipe Name</label>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label>Description</label>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label>Serve for</label>
            <%= f.text_field :serve, class: 'form-control' %>
          </div>
        </div>
        <div class="col-md-4">  
          <div class="form-group">
            <label>Level of difficulty</label>
            <%= f.collection_select :level_id, @levels, :id, :description, { prompt: "Select a level" }, { class: "form-control" }  %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Cooking Time</label>
            <%= f.text_field :cooking_time, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label>Category</label>
        <%= f.collection_select :category_id, @categories, :id, :description, { prompt: "Select a category" }, { class: "form-control" }  %>
      </div>

      <div class="form-group">
        <label>Ingredient</label>
        <%= f.text_area :ingredient, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label>Preparation</label>
        <%= f.text_area :preparation, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit my recipe", class: "btn btn-large btn-primary" %>
      </div>
    </form>
    <% end %>

  </div>
</div>

<hr>