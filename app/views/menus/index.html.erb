<div class="row">
  <div class="col-md-5 col-md-offset-3">

    <div class="page-header">
      <h1>Submit a recipe</h1>
    </div>

    <%= form_for(@menu) do |f| %>
    <form class="form-horizontal" role="form">
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.file_field :image %>
        <p class="help-block">For better picture resolution, the size should be 280x280.</p>
      </div>
      
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Recipe Name' %>
      </div>

      <div class="form-group">
        <%= f.text_area :ingredient, class: 'form-control', placeholder: 'Ingredient' %>
      </div>

      <div class="form-group">
        <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit my recipe", class: "btn btn-large btn-primary" %>
      </div>
    </form>
    <% end %>

  </div>
</div>