<div class="col-md-4">

	<div class="panel panel-default">

		<div class="panel-heading">
			<h3 class="panel-title">
				<%= menu.title %>
				<p class="pull-right"><small>Posted <%= time_ago_in_words(menu.created_at) %> ago.</small></p>
			</h3>
		</div>
		<div class="panel-body">
			<%= image_tag "../uploads/codercat.png" , :height => '328px', :class => 'img-thumbnail' %>
			<p><%= menu.ingredient %></p>
		</div>
		<div class="panel-footer">
			<%= menu.description %>
		</div>

	</div>

</div>