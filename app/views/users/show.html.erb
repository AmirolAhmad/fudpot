<% provide(:title, @user.name) %>

<div class="jumbotron">
  <h2 class="text-center"><%= @user.name %></h2>
  <p class="text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam luctus condimentum mollis.</p>
	<center><%= gravatar_for @user, size: 170 %></center>
</div>

<div class="row">
<% @menus.each do |menu,user| %>
  <div class="col-md-3">

    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title">
          <%= menu.title %>
          <div class="btn-group btn-group-xs pull-right">
            <%= link_to raw("<span class=\"glyphicon glyphicon-eye-open\"></span>"), menu_path(menu), class: 'btn btn-primary' %>
            <% if current_user?(menu.user) %>
              <%= link_to raw("<span class=\"glyphicon glyphicon-pencil\"></span>"), '#', class: 'btn btn-info' %>
              <%= link_to raw("<span class=\"glyphicon glyphicon-remove\"></span>"), menu_path(menu), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }, title: menu.title %>
            <% end %>
          </div>
        </h3>
      </div>
      <div class="panel-body">
        <%= image_tag "../uploads/" + menu.filename, :height => '328px', :class => 'img-thumbnail' %>
        <p><%= menu.ingredient %></p>
      </div>
      <div class="panel-footer">
        <p><%= menu.description %></p>
        <p style="line-height:12px;">
          <small>
            Posted <%= time_ago_in_words(menu.created_at) %> ago <br />
            by <%= link_to menu.user.name, user %>
          </small>
        <p>
      </div>

    </div>
    
  </div>
  <%= will_paginate @menus %>
<% end %>
</div>