<% provide(:title, 'Sign up') %>
<div id="full-screen-background-image-register">
  <div id="wrapper">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="register-form">
            <p class="lead">Why wait? It's free!</p>
            <%= form_for(@user) do |f| %>
            <form class="form-horizontal" role="form">
              <%= render 'shared/error_messages', object: f.object %>
              
              <div class="form-group">
                <%= f.text_field :name, class: 'form-control', placeholder: 'Full name' %>
              </div>

              <div class="form-group">
                <%= f.text_field :email, class: 'form-control', placeholder: 'Email address' %>
              </div>

              <div class="form-group">
                <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
              </div>

              <div class="form-group">
                <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation' %>
              </div>

              <div class="form-group">
                <%= f.submit "Create my account", class: "btn btn-large btn-primary btn-block" %>
              </div>
            </form>
            <% end %>
          </div>
        </div>

        <div class="col-md-8">
          <div class="page-header">
            <h1>Registration is FREE!</h1>
          </div>
          <p class="lead">Sign up now and get everything work online</p>
        </div>
      </div>
    </div>
  </div>
</div>