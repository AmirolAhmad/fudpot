<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to raw("Fudpot <span class=\"label label-danger\">Beta</span>"), root_path, :class => 'navbar-brand' %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Home', root_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if signed_in? %>
        <li><%= link_to "List of chef", users_path %></li>
        <li><%= link_to "Submit a recipe", new_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle avatar" data-toggle="dropdown">
            <%= gravatar_for @current_user, :class => 'img-circle' %> <%= @current_user.name %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to raw("<span class=\"glyphicon glyphicon-eye-open\"></span> Dashboard"), current_user %></li>
            <li>
              <%= link_to raw("<span class=\"glyphicon glyphicon-pencil\"></span> Edit profile"), edit_user_path(current_user) %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to raw("<span class=\"glyphicon glyphicon-log-out\"></span> Logout"), signout_path, method: "delete" %>
            </li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to raw("<span class=\"glyphicon glyphicon-user\"></span> Register"), signup_path %></li>
          <li><%= link_to raw("<span class=\"glyphicon glyphicon-lock\"></span> Login"), signin_path %></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>