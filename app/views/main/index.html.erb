<div class="page-header">
	<h1>Hello World! <small>Subtext for header</small></h1>
</div>

<span class="glyphicon glyphicon-search"></span> <%= link_to 'My Recipe', controller: 'resipi' %>

<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/menu_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Sample App</h1>

    <h2>
      This is the home page for the
      <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
      sample application.
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>






<%= will_paginate @menus %>

<% @menus.each do |menu,user| %>

<li>
  <span class="title"><%= menu.title %></span>
  <span class="ingredient"><%= menu.ingredient %></span>
  <span class="description"><%= menu.description %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(menu.created_at) %> ago
  </span>
  <span class="chef">by <%= link_to menu.user.name, user %></span>
</li>

<% end %>

<%= will_paginate @menus %>
