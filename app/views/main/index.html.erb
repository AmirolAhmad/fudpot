<span class="glyphicon glyphicon-search"></span> <%= link_to 'My Recipe', controller: 'resipi' %>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div class="row">
<% @menus.each do |menu,user| %>
  <div class="col-md-3">

    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title">
          <%= menu.title %>
          <p class="pull-right" style="line-height:9px;text-align:right;">
            <small>
              Posted <%= time_ago_in_words(menu.created_at) %> ago <br />
              by <%= link_to menu.user.name, user %>
          </small>
          </p>
        </h3>
      </div>
      <div class="panel-body">
        <%= image_tag "../uploads/codercat.png" , :height => '328px', :class => 'img-thumbnail' %>
        <p><%= menu.ingredient %></p>
      </div>
      <div class="panel-footer">
        <%= menu.description %>
      </div>

    </div>
    
  </div>
	<%= will_paginate @menus %>
<% end %>
</div>